<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/image"
    android:layout_height="match_parent"
    tools:context=".FehrestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <SearchView
            android:layout_width="wrap_content"
            android:background="@drawable/costum5"
            android:id="@+id/search"
            android:queryHint="جستجو کنید"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_height="65dp"></SearchView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum4"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:paddingBottom="10dp"
                android:text="چگونه درس خواندن را شروع كنيم با اينكه هيچ حال و حوصله درس خواندن ندارم؟"
                android:textAlignment="center"
                android:textSize="13.5dp"></TextView>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum5"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="8 نكته در ارزش مطالعه"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum"
                android:text=" نكاتی درباره مكان مطالعه"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/texta4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:background="@drawable/costum4"
                android:fontFamily="@font/titr"
                android:text="4 مزیت مطالعه صحیح"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:background="@drawable/costum5"
                android:fontFamily="@font/titr"
                android:text="6 نکته درباره مطالعه صحیح"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="روش پس ختام معروف"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum4"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="9 نكته در سرعت مطالعه"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum5"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="13 نکته طلایی مطالعه"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="اصول برنامه ریزی چیست؟"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum4"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="10 کاری که باعث هدر رفتن وقت میشود"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text10"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum5"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="*قانون مرور و تکرار*"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum"
                android:gravity="center"
                android:fontFamily="@font/titr"
                android:text="* روش جعبه لایتنر *"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum4"
                android:paddingTop="10dp"
                android:fontFamily="@font/titr"
                android:text="*بهترین زمان مرور*"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text13"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum5"
                android:paddingTop="10dp"
                android:fontFamily="@font/titr"
                android:text="*وضعيت بدن هنگام مطالعه چگونه بايد باشد؟!*"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text14"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum"
                android:paddingTop="10dp"
                android:fontFamily="@font/titr"
                android:text="*10 روش مطالب حفظی*"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/text15"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/costum4"
                android:paddingTop="10dp"
                android:fontFamily="@font/titr"
                android:text="* دعای مطالعه *"
                android:textAlignment="center"
                android:textSize="18dp"></TextView>


        </LinearLayout>
    </ScrollView>

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>