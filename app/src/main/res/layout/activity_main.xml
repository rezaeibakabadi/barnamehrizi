<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:id="@+id/linear1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:id="@+id/fehrest"
                    android:layout_height="150dp"
                    android:background="@drawable/fehrest">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="فهرست مطالب"
                    android:textAlignment="center"
                    android:background="@drawable/costum5"
                    android:textSize="29dp"
                    android:fontFamily="@font/nasm"
                    android:layout_height="wrap_content"
                    fontPath="assets/fonts/afsaneh.ttf"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:id="@+id/linear2"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:id="@+id/fav"
                    android:layout_height="150dp"
                    android:background="@drawable/fav">

                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="علاقه مندی ها"
                    android:textAlignment="center"
                    android:textSize="29dp"
                    android:fontFamily="@font/nasm"
                    android:background="@drawable/costum5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear3"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/sourcse"
                    android:background="@drawable/sources">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="منابع"
                    android:textAlignment="center"
                    android:textSize="29dp"
                    android:fontFamily="@font/nasm"
                    android:background="@drawable/costum5"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:id="@+id/linear4"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:id="@+id/setting"
                    android:layout_height="150dp"
                    android:background="@drawable/setting">

                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="تنظیمات"
                    android:textAlignment="center"
                    android:background="@drawable/costum5"
                    android:textSize="29dp"
                    android:fontFamily="@font/nasm"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:id="@+id/linear5"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="135dp"
                    android:id="@+id/exit"
                    android:layout_height="135dp"
                    android:background="@drawable/exit">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="خروج"
                    android:background="@drawable/costum5"
                    android:textAlignment="center"
                    android:textSize="29dp"
                    android:fontFamily="@font/nasm"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>